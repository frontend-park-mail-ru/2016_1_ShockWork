<fest:template xmlns:fest="http://fest.mail.ru">
    <div id="login" class="row">
        <div class="col s12 m6 offset-m3">
            <nav>
                <div class="nav-wrapper">
                    <a class="brand-logo center">Войти</a>
                    <ul class="left hide-on-med-and-down">
                        <li>
                            <a class="js-go-back waves-effect waves-light btn">Назад</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="col s12 m6 offset-m3">
              <div class="card-panel">
                  <form>
                    <div class="input-field">
                      <i class="material-icons prefix">perm_identity</i>
                      <input id="username" type="text" class="validate"></input>
                      <label for="username">Username</label>
                        <div class="js-username-error form__error"></div>
                    </div>
                    <div class="input-field">
                      <i class="material-icons prefix">lock_open</i>
                      <input id="password" type="password" class="validate"></input>
                      <label for="password">Password</label>
                        <div class="js-password-error form__error"></div>
                    </div>
                    <div>
                        <input class="js-submit waves-effect waves-light btn" type="submit"></input>
                    </div>
                  </form>
              </div>
        </div>
    </div>
</fest:template>
